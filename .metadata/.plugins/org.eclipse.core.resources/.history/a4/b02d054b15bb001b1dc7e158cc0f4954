package Vacunas.mundo;

import java.util.ArrayList;

/************************************************************/
/**
 * clase que representa una eps
 */
public class Eps {
	/**
	 * lista de usuarios
	 */
	private  ArrayList<Usuario> usuarios;
	/**
	 * nombre de la eps
	 */
	private String nombre;

	/**
	 *  agrega un nuevo usuario a la eps
	 * @param pId   identificacion del usuario
	 * @param pNombres   nombres del usuario
	 * @param pEmail    email del usuario
	 * @param pTipoId  tipo de identificacion del usuario
	 * @param pApellidos  apellidos del usuario
	 * @param Pcelular  celular del usuario
	 * @param pTelefono   telefono del usuario
	 * @param pDepartamento   departamento del usuario
	 * @param pMunicipio   municipio del usuario
	 * @param pDireccion   direccion del usuario
	 */
	public void agregarUsuario(String pId, String pNombres, String pEmail, String pTipoId, String pApellidos,
			String Pcelular, String pTelefono, Departamento pDepartamento, Municipio pMunicipio, String pDireccion) {
		
		Usuario temporal = new Usuario(pId, pNombres, pEmail, pTipoId, pApellidos, Pcelular, pTelefono, pDepartamento, pMunicipio, pDireccion);
	    usuarios.add(temporal);
	}

	/**
	 * Elimina un usuario
	 * @param pId el id del usuario
	 * @return true si se pudo eliminar o false sino
	 */
	public boolean eliminarUsuario(String pId) {
		Usuario temporal = buscarUsuario(pId);
		if(usuarios.remove(temporal))
		{
			return true;
		}
		else
		{
			return false;
		}
	}

	/**
	 * busca el usuario con una identificacion
	 * @param pId  identificaion del usuario
	 * @return el usuario buscado o null si no existe
	 */
	public Usuario buscarUsuario(String pId) {
		
		Usuario temporal = null;
		for (int i = 0; i < usuarios.size(); i++) {
			Usuario temp = usuarios.get(i);
			if(temp.getId()==pId) {
				temporal=temp;
				return temporal;
			}
		}
		return temporal;
	}
};
