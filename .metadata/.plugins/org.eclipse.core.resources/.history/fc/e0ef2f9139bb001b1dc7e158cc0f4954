	/**
	 * Busca la eps de un usuario determinado
	 * @param pId identificacion del usuario
	 * @return la eps del usuario
	 */
	public Eps buscarEpsUsuario(String pId) {
		System.out.println( epses.size());
		Eps temporal = null;
		for (int i = 0; i < epses.size(); i++) {
			Eps temp = epses.get(i);
			if(temp.buscarUsuario(pId)!=null) {

				temporal=temp;
				return temporal;
			}
		}
		return temporal;
		
